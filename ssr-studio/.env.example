# SSR Studio Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=ssr_studio
POSTGRES_PASSWORD=ssr_studio_secret
POSTGRES_DB=ssr_studio

# =============================================================================
# STORAGE
# =============================================================================
# Options: local, s3
STORAGE_BACKEND=local

# MinIO/S3 settings (if using s3 backend)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
S3_BUCKET=ssr-studio-artifacts

# =============================================================================
# MODEL PROVIDERS
# =============================================================================
# OpenAI API key (required for OpenAI models)
OPENAI_API_KEY=

# Anthropic API key (required for Claude models)
ANTHROPIC_API_KEY=

# Default provider: openai, anthropic, or local
DEFAULT_MODEL_PROVIDER=openai

# =============================================================================
# LOCAL MODELS (vLLM)
# =============================================================================
# Hugging Face token for gated models
HF_TOKEN=

# vLLM model to serve
VLLM_MODEL=meta-llama/Llama-3.1-8B-Instruct

# Tensor parallelism size (number of GPUs)
VLLM_TP_SIZE=1

# Maximum context length
VLLM_MAX_LEN=8192

# =============================================================================
# SANDBOX SETTINGS
# =============================================================================
SANDBOX_TIMEOUT=300
SANDBOX_MEMORY_LIMIT=2g
SANDBOX_CPU_LIMIT=2.0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# FRONTEND
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
